{
  "name": "gtm-dashboard",
  "version": "0.0.1",
  "description": "Git Time Metric Dashboard",
  "author": {
    "name": "Luis Mastrangelo"
  },
  "license": "CC0-1.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "build": {
    "appId": "gtm-dashboard",
    "files": [
      "dist-electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "resources"
    },
    "publish": null
  },
  "browserslist": [
    "last 1 chrome versions"
  ],
  "scripts": {
    "dev": "rollup --config --watch",
    "build": "parcel build src/desktop/* --out-dir dist-electron --target electron --no-source-maps --no-minify --no-cache && cp -v -r assets dist-electron/",
    "start": "electron dist-electron/main.js",
    "pack": "electron-builder",
    "demo": "parcel build index.html --no-source-maps --public-url /gtm-web/ && cp -v data-commits.json dist/",
    "test": "mocha test/*-test.js"
  },
  "dependencies": {
    "chart.js": "^2.9.3",
    "chartjs-chart-matrix": "^0.1.3",
    "chartjs-plugin-colorschemes": "^0.4.0",
    "chartjs-plugin-datalabels": "^0.7.0",
    "moment": "^2.24.0",
    "page": "^1.11.6"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.13.0",
    "@fullhuman/postcss-purgecss": "^2.1.2",
    "@polka/send-type": "^0.5.2",
    "@rollup/plugin-commonjs": "^11.1.0",
    "@rollup/plugin-html": "^0.1.1",
    "@rollup/plugin-json": "^4.0.3",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@rollup/plugin-url": "^4.0.2",
    "@types/chart.js": "^2.9.19",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.13.1",
    "@typescript-eslint/parser": "^2.29.0",
    "autoprefixer": "^9.7.6",
    "chokidar": "^3.4.0",
    "electron": "^6.0.8",
    "electron-builder": "^22.6.0",
    "eslint": "^6.8.0",
    "mocha": "^7.1.1",
    "polka": "^0.5.2",
    "postcss": "^7.0.27",
    "postcss-cli": "^7.1.1",
    "postcss-import": "^12.0.1",
    "postcss-modules": "^2.0.0",
    "rollup": "^2.7.3",
    "rollup-plugin-bundle-html": "^0.2.2",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-html2": "^1.1.0",
    "rollup-plugin-livereload": "^1.2.0",
    "rollup-plugin-postcss": "^3.1.1",
    "rollup-plugin-progress": "^1.1.1",
    "rollup-plugin-sizes": "^1.0.2",
    "rollup-plugin-svelte": "^5.2.1",
    "rollup-plugin-terser": "^5.3.0",
    "sass": "^1.26.5",
    "sirv": "^0.4.2",
    "svelte": "^3.19.0",
    "svelte-preprocess": "^3.7.4",
    "tailwindcss": "^1.3.5"
  },
  "peerDependencies": {}
}
