{
  "compilerOptions": {
    "module": "commonjs",
    "incremental": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "types": ["svelte"],                           /* Type declaration files to be included in compilation. */
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*", "main.ts", "preload.ts"
  ]
}