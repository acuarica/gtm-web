{
  "name": "gtm-dash",
  "version": "0.0.1",
  "description": "Git Time Metric Dashboard",
  "author": {
    "name": "Luis Mastrangelo"
  },
  "license": "CC0-1.0",
  "private": true,
  "workspaces": [
    "@mock",
    "@notes",
    "@git"
  ],
  "type": "module",
  "main": "dist-electron/main.js",
  "build": {
    "appId": "gtm-dashboard",
    "files": [
      "dist-electron/**/*",
      "node_modules2/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "resources"
    },
    "publish": null
  },
  "browserslist": [
    "last 1 chrome versions"
  ],
  "scripts": {
    "dev": "./make.js dev:dev serve",
    "build": "tsc && rollup --config",
    "lint": "eslint **/*.ts *.js",
    "test": "mocha @*/test/*-test.js",
    "prepare": "yarn build",
    "start": "electron dist/electron/main.js",
    "dist": "electron-builder",
    "clean": "rm -rfv @*/index.js @*/src/*.js @*/test/*.js src/**/*.js dist",
    "gtm": "/Users/luigi/work/#forks/gtm/bin/gtm"
  },
  "dependencies": {
    "chart.js": "^2.9.3",
    "chartjs-chart-matrix": "^0.1.3",
    "chartjs-plugin-colorschemes": "^0.4.0",
    "chartjs-plugin-datalabels": "^0.7.0",
    "moment": "^2.24.0",
    "page": "^1.11.6"
  },
  "devDependencies": {
    "@fortawesome/free-solid-svg-icons": "^5.13.0",
    "@fullhuman/postcss-purgecss": "^2.1.2",
    "@open-wc/rollup-plugin-html": "^1.0.3",
    "@polka/send-type": "^0.5.2",
    "@rollup/plugin-commonjs": "11.0.2",
    "@rollup/plugin-image": "^2.0.4",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@types/chart.js": "^2.9.20",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.13.5",
    "@types/page": "^1.8.0",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "autoprefixer": "^9.7.6",
    "chalk": "^4.0.0",
    "electron": "^6.0.8",
    "electron-builder": "^22.6.0",
    "eslint": "^6.8.0",
    "mocha": "^7.1.1",
    "polka": "^0.5.2",
    "postcss": "^7.0.27",
    "rollup": "^2.8.2",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-livereload": "^1.2.0",
    "rollup-plugin-postcss": "^3.1.1",
    "rollup-plugin-progress": "^1.1.1",
    "rollup-plugin-svelte": "^5.2.1",
    "rollup-plugin-terser": "^5.3.0",
    "sirv": "^0.4.2",
    "svelte": "^3.19.0",
    "tailwindcss": "^1.3.5",
    "typescript": "^3.8.3"
  }
}
