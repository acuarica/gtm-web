{
  "compilerOptions": {
      "target": "ES6",
      "module": "CommonJS",
      "diagnostics": true,
      "noImplicitThis": true,
      "noEmitOnError": true,
      "allowJs": true,
      "lib": ["es5", "es6", "dom"],
      "importHelpers": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports":true,
      "resolveJsonModule": true,
      "types": ["svelte"]
  },
  "include": [
      "src"
  ],
  "exclude": [
      "node_modules"
  ]
}